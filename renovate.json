{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits",
    ":dependencyDashboard",
    ":prHourlyLimit4",
    ":prConcurrentLimit10"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": true
    },
    {
      "matchManagers": ["npm"],
      "postUpgradeTasks": {
        "commands": [
          "yarn version minor"
        ],
        "fileFilters": [
          "package.json",
          ".yarn/versions/*.yml"
        ]
      }
    }
  ],
  "separateMinorPatch": true
}
