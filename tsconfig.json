{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "jsx": "react-jsx",
    "allowJs": true,
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["vitest/globals", "@testing-library/jest-dom", "node", "@types/testing-library__jest-dom"],
    "suppressImplicitAnyIndexErrors": true
  },
  "include": ["src/**/*"]
}
